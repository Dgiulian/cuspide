---
import {
  Card,
  CardContent,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Check } from "lucide-react";

interface Props {
  title: string;
  description?: string;
  subtitle: string;
}

const { title, description, subtitle } = Astro.props;
---

<Card className="dark:bg-gray-700 dark:border-gray-600">
  <CardHeader>
    <div class="flex justify-center">
      <slot name="icon" />
    </div>
    <CardTitle className="dark:text-gray-100">{title}</CardTitle>
  </CardHeader>
  <CardContent>
    <p class="dark:text-gray-300">{description}</p>
  </CardContent>
  <CardFooter>
    <Check className="text-green-400 mr-2" />
    <span class="text-sm text-gray-400">{subtitle}</span>
  </CardFooter>
</Card>
